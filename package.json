{
  "name": "rails_react_js_ssr_setup",
  "private": true,
  "scripts": {
    "lint-hook": "eslint -f table --ext .js --ext .jsx app/javacript",
    "lint-fix-hook": "eslint -f table --ext .js --ext .jsx --fix app/javacript",
    "lint": "npm run lint-hook --silent || true",
    "lint-fix": "npm run lint-fix-hook --silent || true",
    "lint:folder": "eslint -f table --ext .js --ext .jsx $base_folder",
    "lint-fix:folder": "eslint -f table --ext .js --ext .jsx --fix $base_folder"
  },
  "lint-staged": {
    "*.jsx": [
      "client/node_modules/.bin/eslint --fix --config app/javascript/.eslintrc",
      "git add"
    ],
    "*.rb": [
      "rubocop --auto-correct --force-exclusion",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/preset-react": "^7.7.0",
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "^4.0.7",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "lint-staged": "^10.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-on-rails": "11.3.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "turbolinks": "^5.2.0"
  },
  "version": "0.1.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.0.10",
    "webpack-dev-server": "^3.9.0"
  }
}
